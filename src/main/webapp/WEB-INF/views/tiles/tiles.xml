<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
    <!-- Default Main Template -->
    <definition name="baseTemplate" template="/WEB-INF/views/tiles/template/baseTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp"/>
        <put-attribute name="content" value=""/>
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp"/>
    </definition>

    <definition name="home" extends="baseTemplate">
        <put-attribute name="content" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="article" extends="baseTemplate">
        <put-attribute name="content" value="/WEB-INF/views/article.jsp"/>
    </definition>

    <definition name="basket" extends="baseTemplate">
        <put-attribute name="content" value="/WEB-INF/views/basket.jsp"/>
    </definition>



    <definition name="adminTemplate" template="/WEB-INF/views/tiles/template/adminTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/tiles/template/header.jsp"/>
        <put-attribute name="adminNav" value="/WEB-INF/views/tiles/template/adminNav.jsp"/>
        <put-attribute name="adminPageContent" value=""/>
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/footer.jsp"/>
    </definition>

    <definition name="adminArticles" extends="adminTemplate">
        <put-attribute name="adminPageContent" value="/WEB-INF/views/adminArticles.jsp"/>
    </definition>

    <definition name="adminArticle" extends="adminTemplate">
        <put-attribute name="adminPageContent" value="/WEB-INF/views/adminArticle.jsp"/>
    </definition>

</tiles-definitions>